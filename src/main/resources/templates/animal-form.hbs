{{#partial "content"}}

    {{#if editAnimal}}
        <!--Form without header-->
        <form action="/animals/{{animal.id}}/update" method="POST">
            <div class="card" >
                <div class="card-block">
                    <!--Header-->
                    <div class="form-header blue-gradient">
                        <h3><i class="fa fa-user"></i> Edit this Animal:</h3>
                    </div>
                    <div class="md-form">
                        <i class="fa"></i>
                        <input type="text" id="name" name="name" value="{{animal.name}}" class="form-control" required>
                        <label for="name" >Animal's Name</label>
                    </div>
            </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-deep-orange">Update!</button>
                </div>
            </div>
        </form>

    {{else}}
        <!--Form without header-->
        <form action="/animals/new" method="POST">
            <div class="card">
                <div class="card-block">
                    <!--Header-->
                    <div class="form-header blue-gradient">
                        <h3><i class="fa fa-user"></i> Add Animal:</h3>
                    </div>
                    <!--Body-->
                    <!--                    <br>-->
                    <!--Body-->
                    <div class="md-form">
                        <i class="fa"></i>
                        <input type="text" id="name" name="name" class="form-control" required>
                        <label for="name" >Animal's Name</label>
                    </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-deep-orange">Add</button>
                </div>
            </div>
        </form>
    {{/if}}
{{/partial}}
{{> layout.hbs}}