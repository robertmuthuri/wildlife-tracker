{{#partial "content"}}
    <!--Table-->
    <div class="container text-center">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <button class="btn blue-gradient"><h2>Sightings</h2></button>
                {{#if sightings}}
                <table id="indexTable" class="table table-striped w-auto">
                    <!--Table head-->
                    <thead class="aqua-gradient">
                    <tr>
                        <th>ID</th>
                        <th>Animal</th>
                        <th>Ranger</th>
                        <th>Location</th>
                        <th>Sighted at</th>
                    </tr>
                    </thead>
                    <!--Table head-->
                    {{#each locations}}
                        <!--Table body-->
                        <tbody>
                        <tr class="table-info">
                            <th scope="row">{{id}}</th>
                            <td>{{animal_id}}</td>
                            <td>{{ranger_id}}</td>
                            <td>{{location_id}}</td>
                            <td>{{sighted_at}}</td>
                        </tr>
                        </tbody>
                        <!--Table body-->
                    {{/each}}
                {{else}}
                    <p>There are no Sightings yet!</p>
                {{/if}}
            </table>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>

{{/partial}}

{{> layout.hbs}}